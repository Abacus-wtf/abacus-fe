{
  "name": "abacus-fe",
  "version": "1.0.0",
  "repository": "git@github.com:Abacus-wtf/abacus-fe.git",
  "description": "Monorepo for all abacus UI and shared components",
  "author": "Abacus Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev:portal": "cd packages/abacus-portal && yarn dev",
    "dev": "npm-run-all --parallel dev:portal",
    "lint:portal": "cd packages/abacus-portal && yarn lint:fix",
    "lint:fix": "npm-run-all --parallel lint:portal",
    "test:portal": "cd packages/abacus-portal && yarn test",
    "test": "npm-run-all --parallel test:portal"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "lerna-wizard": "^1.1.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "husky": "^7.0.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
