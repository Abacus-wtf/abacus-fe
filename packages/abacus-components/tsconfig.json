{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib",
    "jsx": "react",
    // TODO: bring these rules to top level
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
