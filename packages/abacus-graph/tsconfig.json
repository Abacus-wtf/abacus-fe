{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "lib", "**/*.story*", "**/*.config.*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib",
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
