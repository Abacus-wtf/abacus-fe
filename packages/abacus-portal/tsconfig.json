{
  "extends": "../../tsconfig.json",
  "exclude": ["_types/globalTypes.ts", "node_modules", "public", ".cache"],
  "compilerOptions": {
    "baseUrl": "./src",
    "noEmit": true,
    "paths": {
      "@state/*": ["state/*"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["images/*"],
      "@components/*": ["components/*"],
      "@sections/*": ["sections/*"],
      "@config/*": ["config/*"],
      "@templates/*": ["templates/*"],
      "@layouts/*": ["layouts/*"],
      "@models/*": ["models/*"],
      "@test-utils/*": ["test-utils/*"],
      "@utils": ["utils/index"]
    }
  }
}
