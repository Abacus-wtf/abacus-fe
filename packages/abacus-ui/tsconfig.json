{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "lib", "**/*.story*", "**/*.config.*"],
  "compilerOptions": {
    "typeRoots": ["./src/styled.d.ts"],
    "baseUrl": "./src",
    "outDir": "lib",
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@utils": ["utils/index"],
      "@theme": ["components/theme/index"],
      "@static/*": ["static/*"],
      "@atoms": ["components/atoms/index"],
      "@molecules": ["components/molecules/index"],
      "@typography": ["components/typography/index"],
      "@organisms": ["components/organisms/index"],
      "@templates": ["components/templates/index"]
    }
  }
}
