{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "lib", "**/*.story*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib",
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@utils": ["utils/index"],
      "@theme": ["components/theme/index"]
    }
  }
}
